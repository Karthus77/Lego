<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_good">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/yellow"
            android:layout_height="40dp">
        <Button
            android:id="@+id/create_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/backblack"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
        </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建商品"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/create_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/hhh">

        </ImageView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img">
                <ImageView
                    android:id="@+id/pen"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/pen"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/pen"
                    android:text="编辑图片"
                    android:layout_marginLeft="3dp">

                </TextView>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/create_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:layout_below="@id/create_img"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp">

        </TextView>
        <EditText
            android:id="@+id/get_name"
            android:layout_toRightOf="@id/create_name"
            android:layout_width="250dp"
            android:layout_below="@id/create_img"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/good_create"
            android:inputType="text"
            android:layout_marginLeft="20dp">

        </EditText>
        <TextView
            android:id="@+id/create_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品价格"
            android:layout_below="@id/create_name"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="45dp">

        </TextView>
        <EditText
            android:id="@+id/get_price"
            android:layout_toRightOf="@id/create_price"
            android:layout_width="250dp"
            android:layout_below="@id/create_name"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:background="@drawable/good_create"
            android:inputType="number"
            android:layout_marginLeft="20dp">

        </EditText>
        <TextView
            android:id="@+id/create_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品数量"
            android:layout_below="@id/create_price"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="45dp">

        </TextView>
        <EditText
            android:id="@+id/get_number"
            android:layout_toRightOf="@id/create_price"
            android:layout_width="250dp"
            android:layout_below="@id/create_price"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:background="@drawable/good_create"
            android:inputType="number"
            android:layout_marginLeft="20dp">

        </EditText>
        <TextView
            android:id="@+id/create_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品简介"
            android:layout_below="@id/create_number"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="45dp">

        </TextView>
        <EditText
            android:id="@+id/get_info"
            android:layout_toRightOf="@id/create_price"
            android:layout_width="250dp"
            android:layout_below="@id/create_number"
            android:layout_marginTop="35dp"
            android:layout_height="70dp"
            android:background="@drawable/good_create"
            android:inputType="text"
            android:layout_marginLeft="20dp">

        </EditText>
        <Button
            android:id="@+id/create"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="确   认"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/red">

        </Button>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>