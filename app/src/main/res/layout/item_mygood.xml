<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/myGood"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:id="@+id/myGood_revise"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:textSize="10dp"
            android:text="修改"
            android:textColor="@color/white"
            android:background="@drawable/outstyle">

        </Button>
        <ImageView
            android:id="@+id/myGood_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/hhh">
        </ImageView>
        <TextView
            android:id="@+id/myGood_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myGood_image"
            android:text="商品名称"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">
        </TextView>
        <ImageView
            android:id="@+id/myGood_money"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/rmb"
            android:layout_toRightOf="@id/myGood_image"
            android:layout_marginTop="73dp"
            android:layout_marginLeft="10dp">

        </ImageView>
        <TextView
            android:id="@+id/myGood_price"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myGood_money"
            android:text="20"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textColor="@color/red">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上架数量:"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp">

        </TextView>
        <TextView
            android:id="@+id/myGood_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp">

        </TextView>
    </RelativeLayout>

</LinearLayout>
